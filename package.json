{
  "name": "blog-api",
  "dependencies": {
    "@prisma/client": "6.4.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "eslint": "^9.21.0",
    "eslint-plugin-perfectionist": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.2",
    "prisma": "^6.4.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint './src/**/*.{js,ts}'",
    "format": "prettier --check --write ./src",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --check --write",
      "eslint --fix"
    ]
  },
  "imports": {
    "#*": "./src/*"
  },
  "type": "module"
}
